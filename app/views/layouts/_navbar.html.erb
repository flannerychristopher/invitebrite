<header class="navbar navbar-default navbar-custom">
  <div class="container-fluid wrapper">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Invitebrite", root_path, class: "navbar-brand", id: "logo" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">

        <li class="dropdown">


          <% if logged_in? %>
            <li><%= link_to "logged in as #{current_user.name}",
                            user_path(current_user) %>
            <li><%= link_to "LOG OUT", signout_path, method: "delete" %></li>
          <% else %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">LEARN MORE<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Blog", blog_path %></li>
            <li><%= link_to "Fees", fees_path %></li>
            <li><%= link_to "How it works", help_path %></li>
          </ul>
            <li><%= link_to "LOG IN", signin_path %></li>

          <% end %>

          <li><%= link_to "EVENTS", events_path %></li>
          <li><%= link_to "CREATE EVENT", new_event_path %></li>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->

  </div><!-- /.container-fluid -->
</header>
