<h1>All Events</h1>

<h3>Upcoming Events<h3>
  <% @events.future.each do |event| %>
    <h3><%= event.title %></h3>
    <small>
      <%= event.location %>,
      <%= event.date.to_date.to_formatted_s :long_ordinal %>
    </small>
    <p><%= event.description %></p>
    <hr>
  <% end %>

  <h3>Past Events<h3>
    <% @events.past.each do |event| %>
      <h3><%= event.title %></h3>
      <small>
        <%= event.location %>,
        <%= event.date.to_date.to_formatted_s :long_ordinal %>
      </small>
      <p><%= event.description %></p>
      <hr>
    <% end %>
